{
  "name" : "lemundo/translations",
  "type" : "project",

  "require": {
    "php" : "^7.2",
    "vlucas/phpdotenv": "^3.0",
    "nikic/fast-route" : "^1.3.0",
    "zendframework/zend-diactoros" : "^2.0",
     "zendframework/zend-httphandlerrunner" : "^1.0"
  },
  
  "require-dev": {
    "phpunit/phpunit" : "^8.0",
    "codeception/codeception": "^3.0"
  },

  "autoload": {
    "psr-4": {
      "Lemundo\\Translator\\": "src"
    }
